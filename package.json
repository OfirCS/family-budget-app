{
  "name": "family-budget-app",
  "version": "1.0.0",
  "description": "A desktop budget app for families with WhatsApp bot",
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lucide-react": "^0.263.1",
    "ngrok": "^5.0.0-beta.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "twilio": "^3.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "react-scripts": "5.0.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "bot": "node bot/server.js",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && npm run electron\"",
    "dev-with-bot": "concurrently \"npm start\" \"npm run bot\" \"wait-on http://localhost:3000 && npm run electron\"",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.family.budget",
    "productName": "Family Budget",
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
